{
    "formatter": {
        "enabled": true,
        "lineWidth": 120,
        "indentStyle": "space",
        "indentWidth": 2
    },
    "linter": {
        "enabled": true,
        "rules": {
            "suspicious": {
                "noExplicitAny": "info"
            },
            "a11y": {
                "noAutofocus": "off"
            },
            "correctness": {
                "useExhaustiveDependencies": "info"
            }
        }
    },
    "organizeImports": {
        "enabled": true
    }
}